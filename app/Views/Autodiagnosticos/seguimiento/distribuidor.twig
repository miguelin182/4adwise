            <hr>
            <div class="row">
                <div class="col-12 text-center">
                    <h4>Logros y Hallazgos</h4>
                </div>
            </div>
            {% for logro in logros %}
                <div class="row">
                    <div class="col-11 text-center">
                        {{ logro.created_at|date("d/m/Y") }} - {{ logro.lh }}
                    </div>
                </div>
            {% endfor %}
            <hr>
        </div>
{% endblock %}