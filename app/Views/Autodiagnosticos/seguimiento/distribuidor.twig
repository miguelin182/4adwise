                        <tr>
                            <td>Necesito</td>
                            <td><input type="number" class="form-control" id="123 " name="12n" value="{{ prodnec[0].v12n }}"></td>
                            <td><input type="number" class="form-control" id="34n " name="34n" value="{{ prodnec[0].v34n }}"></td>
