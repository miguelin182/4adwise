            </div>
            <hr>
            <div class="row">
                <div class="col-12 text-center">
                    <h4>Prospectos</h4>
                </div>
            </div>
            {% for prospecto in prospectos %}
                <div class="row">
                    <div class="col-4">
                        <label for="p1">Prospecto</label>
                        <input type="text" class="form-control" value="{{ prospecto.prospecto }}" readonly>
                    </div>
                    <div class="col-4">
                        <label for="cel1">Telefono o celular</label>
                        <input type="tel" class="form-control" value="{{ prospecto.celular }}" readonly>
                    </div>
                    <div class="col-4">
                        <label for="email1"></label>
                        <input type="email" class="form-control" value="{{ prospecto.email }}" readonly>
                    </div>
                </div>
