                        <tr>
                            <td>Cantidad actual</td>
                            <td><input type="number" class="form-control" id="12" name="12" value="{{ prodnec[0].v12e }}"></td>
                            <td><input type="number" class="form-control" id="34" name="34" value="{{ prodnec[0].v34e }}"></td>
                            <td><input type="number" class="form-control" id="1" name="1" value="{{ prodnec[0].v1e }}"></td>
                            <td><input type="number" class="form-control" id="2" name="2" value="{{ prodnec[0].v2e }}"></td>
                            <td><input type="number" class="form-control" id="3" name="3" value="{{ prodnec[0].v3e }}"></td>
                            <td><input type="number" class="form-control" id="4" name="4" value="{{ prodnec[0].v4e }}"></td>
                            <td><input type="number" class="form-control" id="flush" name="flush" value="{{ prodnec[0].flushe }}"></td>
                            <td><input type="number" class="form-control" id="bacteria" name="bacteria" value="{{ prodnec[0].bace }}"></td>
