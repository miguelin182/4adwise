    <!-- FIN JUMBOTRON -->
<div class="container">
    <div id="login" style="margin-top: 80px;">
        <div class="row" style="padding-bottom: 5%;">
            <div class="col-md-4">

            </div>
            <div class="col-md-4">
                <div style="border: 1px solid #31b0d5;-moz-box-shadow: inset 0 4px 6px rgba(0,0,0,.5);-webkit-box-shadow: inset 0 4px 6px rgba(0,0,0,.5);box-shadow: inset 0 4px 6px rgba(0,0,0,.5); padding: 5% 5% 5% 5%;" class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Bienvenidos a {{ company_name }}</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" action="{{ 'auth/signin'|url }}">
                            <div class="alert-container"></div>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus="" />
