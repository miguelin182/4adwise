{% extends "partials/layout_landingaf.twig" %}
{% block styles %}
    <style>
    </style>
{% endblock %}
{% block content %}
    <div class="row" style="background-image: url({{ 'images/pymes/logpic.jpg'|public }}); background-size: cover; background-repeat: no-repeat; height: 100% !important;">
        <div class="col-3"></div>
        <div class="col-6" style="margin-bottom: 25%;">
            <form style="padding-top: 15%;">
                <div style="background-color: #9e9e9e; border-radius: 10px; padding-top: 5%; padding-bottom: 5%;">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h3>Inicio de sesión</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4 text-center">
                            <label for="user">Usuario</label>
                            <input type="text" id="user" name="user" class="form-control">
                            <label class="badge badge-danger" data-key="user"></label>
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4 text-center">
                            <label for="pass">Contraseña</label>
                            <input type="password" id="pass" name="pass" class="form-control">
                            <label class="badge badge-danger" data-key="pass"></label>
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4 text-center" style="padding-top: 1%;">
                            <a href="{{ 'home/seryprod' |url }}" class="btn btn-light">Volver</a>
                            <button type="submit" class="btn btn-primary" data-ajax="true">Iniciar Sesión</button>
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-12 text-center">
                            <p>¿No estas registrado? Registrate <a href="{{ 'home/regcon' |url }}">aquí</a></p>
                        </div>
                        <div class="col-4"></div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>

{% endblock %}